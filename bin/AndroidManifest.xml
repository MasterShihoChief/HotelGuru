        <activity
            android:name="com.sgs.hotelguru.MapsExample"
            android:label="@string/title_activity_maps_example" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCGl9urKBsA_r5HcjV_yTAI4FA9MlEKLaA" />

        <activity
            android:name="com.sgs.hotelguru.EnglishMain"
            android:label="@string/title_activity_english_main" >
