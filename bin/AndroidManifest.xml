        <activity
            android:name="com.sgs.hotelguru.StateRoom"
            android:label="@string/title_activity_state_room" >
        </activity>
        <activity
            android:name="com.sgs.hotelguru.MapsDeutsch"
            android:label="@string/title_activity_maps_deutsch" >
        </activity>
    </application>

</manifest>
